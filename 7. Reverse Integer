class Solution:
    def reverse(self, x: int) -> int:
        x=str(x)
        if x[0]=='-':
            x=x[:0:-1]
            x=int(x)
            if x>2147483648:
                return 0
            return -x
        x=x[::-1]
        x=int(x)
        if x>2147483648:
                return 0
        return x
        
